<div class="row">
    {{#each notes}}
      <div class="col-md-3">
          <div class="card">
              <div class="card-body">
                  <h4 class="card-title d-flex justify-content-between align-items-center">
                      {{title}} <a href="/notes/edit/{{_id}}" class="fas fa-edit"><i></i></a>
                  </h4>
                  <p>{{description}}</p>
                  <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELATE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">
                      Eliminar
                     </button>
                  </form>
              </div>
          </div>
      </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h1>Hola {{user.name}}</h1>
                <p class="lead">No hay vacunas</p>
                <a href="/vaccines/add" class="btn btn-success btn-block">Crea una!</a>
            </div>
        </div>
    
    {{/each}}
</div>